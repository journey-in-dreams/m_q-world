{
	"name": "@mq/ui",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"files": [
		"dist"
	],
	"exports": {
		"./styles.css": "./dist/index.css",
		"./*": "./src/components/ui/*.tsx"
	},
	"scripts": {
		"dev": "bun run --bun next dev --port 3001",
		"build:components": "bun run --bun next build",
		"build:styles": "bun run --bun tailwindcss -i ./src/styles/globals.css -o ./dist/index.css",
		"build": "bun run build:styles && bun run build:components",
		"start": "next start",
		"check-types": "next typegen && tsc --noEmit"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.4",
		"@tailwindcss/cli": "^4.1.16",
		"@tailwindcss/postcss": "^4.1.16",
		"class-variance-authority": "^0.7.1",
		"next": "^16.0.0",
		"next-themes": "^0.4.6",
		"react": "catalog:",
		"react-dom": "catalog:",
		"tailwindcss": "^4.1.16",
		"tw-animate-css": "^1.4.0"
	},
	"devDependencies": {
		"@mq/ts-config": "*",
		"@mq/hooks": "*",
		"@mq/lib": "*",
		"@types/node": "^22.15.3",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"typescript": "5.9.2"
	}
}
